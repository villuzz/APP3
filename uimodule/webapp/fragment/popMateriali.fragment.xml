<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="popMateriali" title="{i18n>Materiali}"  showHeader="false" contentHeight="40%" contentWidth="60%">
    <content>
     <Table id="tMaterial" items="{ path: 'aMaterial>/' }" sticky="ColumnHeaders" showNoData="false" mode="None">
          <columns>
              <Column width="10em"><Text text="{i18n>MATNR}"/></Column>
              <Column width="16em"><Text text="{i18n>MAKTX}"/></Column>
              <Column width="6em"> <Text text="{i18n>WERKS}"/></Column>
              <Column width="6em"> <Text text="{i18n>LGORT}"/></Column>
              <Column width="6em"> <Text text="{i18n>MENGE}"/></Column>
              <Column width="6em"> <Text text="{i18n>MEINS}"/></Column>
              <Column width="6em"> <Text text="{i18n>TBTWR}"/></Column>
              <Column width="5em"><Button icon="sap-icon://add" type="Transparent" press="onAddMatnr"/></Column>
          </columns>
          <items>
              <ColumnListItem vAlign="Middle">
                  <cells>
                      <Input id="idMatnr" value="{aMaterial>MATNR}" type="Text" showValueHelp="true" valueHelpRequest="onHelpMatnr" maxLength="10"/>
                      <Input value="{aMaterial>MAKTX}" maxLength="50"/>
                      <Input value="{aMaterial>WERKS}" maxLength="4"/>
                      <Input value="{aMaterial>LGORT}" maxLength="10"/>
                      <Input value="{aMaterial>MENGE}" maxLength="5" type="Number"/>
                      <Input value="{aMaterial>MEINS}" maxLength="3"/>
                      <Input value="{aMaterial>TBTWR}" type="Number" maxLength="10"/>
                      <Button icon="sap-icon://delete" type="Transparent" press="onCancelMatnr"/>
                  </cells>
              </ColumnListItem>
          </items>
      </Table>                        
    </content>
    <beginButton>
			<Button text="{i18n>Ok}" type="Emphasized" press="onConfirmMatnr"/>
		</beginButton>
    <endButton>
      <!--<Button text="{i18n>Annulla}" type="Emphasized" press="onCloseMatnr"/>-->
    </endButton>
	</Dialog>
</core:FragmentDefinition>

