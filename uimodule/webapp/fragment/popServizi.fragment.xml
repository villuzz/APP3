<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="popServizi" title="{i18n>Servizi}" showHeader="false" contentHeight="40%" contentWidth="60%">
    <content>
     <Table id="tServizi" items="{ path: 'aServizi>/' }" sticky="ColumnHeaders" showNoData="false" mode="None">
          <columns>
              <Column width="10em"><Text text="{i18n>N_ATT}"/></Column>
              <Column width="16em"><Text text="{i18n>DESC_SERVIZI}"/></Column>
              <Column width="6em"><Text text="{i18n>MENGE}"/></Column>
              <Column width="6em"><Text text="{i18n>MEINS}"/></Column>
              <Column width="6em"><Text text="{i18n>TBTWR}"/></Column>
              <Column width="6em"><Text text="{i18n>EKGRP}"/></Column>
              <Column width="6em"><Text text="{i18n>EKORG}"/></Column>
              <Column width="5em"><Button icon="sap-icon://add" type="Transparent" press="onAddServizi"/></Column>
          </columns>
          <items>
              <ColumnListItem vAlign="Middle">
                  <cells>
                      <Input id="idServizi" value="{aServizi>N_ATT}" type="Text" showValueHelp="true" valueHelpRequest="onHelpServizi" maxLength="10"/>
                      <Input value="{aServizi>DESC_BREVE}" maxLength="50"/>
                      <Input value="{aServizi>MENGE}" maxLength="10"/>
                      <Input value="{aServizi>MEINS}" maxLength="4"/>
                      <Input value="{aServizi>TBTWR}" maxLength="10"/>
                      <Input value="{aServizi>EKGRP}" maxLength="10"/>
                      <Input value="{aServizi>EKORG}" maxLength="10"/>
                      <Button icon="sap-icon://delete" type="Transparent" press="onCancelServizi"/>
                  </cells>
              </ColumnListItem>
          </items>
      </Table>                        
    </content>
    <beginButton>
			<Button text="{i18n>Ok}" type="Emphasized" press="onConfirmServizi"/>
		</beginButton>
    <endButton>
      <!--<Button text="{i18n>Annulla}" type="Emphasized" press="onCloseServizi"/>-->
    </endButton>
	</Dialog>
</core:FragmentDefinition>

